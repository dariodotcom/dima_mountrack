<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        style="@style/AppContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin" >

        <fragment
            android:id="@+id/viewer_map"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            class="it.polimi.dima.dacc.mountainroutes.walktracker.views.RouteWalkFragment" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <it.polimi.dima.dacc.mountainroutes.walktracker.views.TimerView
                    android:id="@+id/timerView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"
                    android:textSize="40sp" />

                <RelativeLayout
                    style="@style/route_info_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/walking_activity_time_to_arrive" />

                    <TextView
                        android:id="@+id/time_to_arrive_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="coming soon" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/route_info_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/walking_activity_hiked_over_metres" />

                    <TextView
                        android:id="@+id/hiked_over_metres_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="coming soon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/resume_walk"
                        style="@style/widget_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/walking_activity_resume"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/pause_walk"
                        style="@style/widget_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/walking_activity_pause" />

                    <Button
                        android:id="@+id/end_walk"
                        style="@style/widget_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/walking_activity_end_walk" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>