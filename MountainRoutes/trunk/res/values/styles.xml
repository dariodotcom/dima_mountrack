<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:pagertabslidingstrip="http://schemas.android.com/apk/res/com.astuetz.viewpager.extensions">    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar"></style>    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">        <item name="android:background">@color/accent.blue</item>    </style>    <style name="ActionBarShaded" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">        <item name="android:background">@drawable/background_actionbar_shaded</item>    </style>    <style name="tab_strip">        <item name="android:layout_width">match_parent</item>        <item name="android:layout_height">48dp</item>        <item name="indicatorColor">@color/accent.blue</item>    </style>    <style name="list_container">        <item name="android:background">@drawable/background_listcontainer</item>    </style> <!-- Widgets -->    <style name="widget_textview">        <item name="android:background">@drawable/background_widget_textbox</item>        <item name="android:padding">6dp</item>        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>    </style>    <style name="widget_button">        <item name="android:background">@drawable/background_button</item>        <item name="android:fontFamily">sans-serif-light</item>        <item name="android:textStyle">normal</item>        <item name="android:gravity">center</item>        <item name="android:textColor">@color/button.text.color</item>        <item name="android:paddingLeft">@dimen/button_padding_hor</item>        <item name="android:paddingRight">@dimen/button_padding_hor</item>        <item name="android:paddingTop">@dimen/button_padding_ver</item>        <item name="android:paddingBottom">@dimen/button_padding_ver</item>    </style>    <style name="widget_button_main" parent="@style/widget_button">        <item name="android:layout_marginBottom">8dp</item>        <item name="android:layout_marginLeft">30dp</item>        <item name="android:layout_marginRight">30dp</item>        <item name="android:layout_marginTop">8dp</item>        <item name="android:layout_width">fill_parent</item>        <item name="android:layout_height">wrap_content</item>    </style> <!-- Lists -->    <style name="list_element">        <item name="android:paddingRight">15dp</item>        <item name="android:paddingLeft">15dp</item>        <item name="android:paddingTop">5dp</item>        <item name="android:paddingBottom">5dp</item>        <item name="android:textSize">20sp</item>    </style>    <style name="route_list_overlay">        <item name="android:background">@drawable/background_overlay</item>    </style>    <style name="overlay_background">        <item name="android:background">#cc000000</item>    </style>    <style name="overlay_text">        <item name="android:textColor">#ffffff</item>    </style>    <style name="ActivityWithTabs" parent="AppTheme">        <item name="android:actionBarStyle">@style/ActionBarShaded</item>    </style>        <!-- About activity -->    <style name="about_appname">        <item name="android:gravity">center</item>        <item name="android:textSize">22sp</item>        <item name="android:textAlignment">gravity</item>        <item name="android:textColor">#3d3d3d</item>        <item name="android:textStyle">bold</item>    </style>    <style name="about_description">        <item name="android:gravity">center</item>        <item name="android:textSize">18sp</item>        <item name="android:textColor">#7d7d7d</item>        <item name="android:fontFamily">sans-serif-light</item>        <item name="android:textAlignment">gravity</item>    </style>    <style name="AppContainer">        <item name="android:background">@drawable/repeatingpattern</item>    </style>    <style name="AppTheme" parent="AppBaseTheme">        <item name="android:actionBarStyle">@style/ActionBarShaded</item>        <item name="android:windowContentOverlay">@null</item>    </style>    <style name="CleanActionBar" parent="AppTheme">        <item name="android:actionBarStyle">@style/ActionBar</item>    </style>    <style name="route_info_entry">        <item name="android:background">@drawable/routeinfo_line</item>        <item name="android:paddingTop">@dimen/list_elem_spacing</item>        <item name="android:paddingBottom">@dimen/list_elem_spacing</item>    </style></resources>