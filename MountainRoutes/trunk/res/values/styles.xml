<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar"></style>

    <style name="BlueActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar.background.color</item>
    </style>

    <style name="PersonalizedActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">#FFFFFF</item>  
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button.text.color</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="MainButtonStyle" parent="@style/ButtonStyle">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppContainer">
        <item name="android:background">@drawable/repeatingpattern</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/BlueActionBar</item>
        <item name="android:actionBarTabStyle">@style/PersonalizedActionBarTabs</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>