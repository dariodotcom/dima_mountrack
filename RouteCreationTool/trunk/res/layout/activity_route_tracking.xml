<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RouteTrackingActivity" >

    <fragment
        android:id="@+id/static_route"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        class="it.polimi.dima.dacc.mountainroute.commons.presentation.StaticRouteFragment" />

    <Button
        android:id="@+id/button_stop_tracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/button_stop_tracking_text" >
    </Button>

</LinearLayout>